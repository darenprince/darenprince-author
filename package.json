{
  "name": "darenprince-author",
  "version": "1.0.0",
  "description": "Author platform and website for Daren M. Prince.",
  "license": "CC-BY-NC-4.0",
  "scripts": {
    "dev": "vite --host",
    "build:search": "node ./src/search/build-index.mjs",
    "generate:images": "node scripts/generate-image-manifest.js",
    "generate:icons": "node scripts/generate-icons.mjs",
    "build:site": "npm run lint:buttons && npm run build:search && npm run generate:icons && npm run generate:images && sass --load-path=node_modules/@uswds/uswds/packages scss/styles.scss assets/styles.css",
    "build": "npm run build:site && vite build",
    "preview": "vite preview",
    "watch": "npm run generate:icons && npm run generate:images && sass --load-path=node_modules/@uswds/uswds/packages scss/styles.scss assets/styles.css --watch",
    "test": "vitest run",
    "prepare": "command -v sass >/dev/null 2>&1 || npm install --no-save sass; husky install",
    "deploy": "npm run build && npm run postprocess:seo",
    "postprocess:assets": "node optimize-images.js --root .",
    "postprocess:seo": "node seo-enrich.js --root . --domain $DOMAIN",
    "fetch:noun-icons": "node scripts/fetch-noun-icons.mjs",
    "format": "prettier --write .",
    "lint:buttons": "node scripts/check-button-variants.mjs",
    "lint-staged": "lint-staged"
  },
  "devDependencies": {
    "@sendgrid/mail": "^7.7.0",
    "@types/node": "^24.2.0",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "@uswds/uswds": "^3.13.0",
    "@vitejs/plugin-react": "^4.3.4",
    "autoprefixer": "^10.4.20",
    "cheerio": "^1.0.0-rc.12",
    "favicons": "^7.1.6",
    "fs-extra": "^11.2.0",
    "glob": "^10.3.12",
    "globby": "^14.0.2",
    "gray-matter": "^4.0.3",
    "husky": "^9.1.7",
    "lint-staged": "^15.2.10",
    "marked": "^10.0.0",
    "micromatch": "^4.0.7",
    "minisearch": "^6.1.0",
    "postcss": "^8.4.47",
    "prettier": "^3.3.3",
    "sass": "^1.89.2",
    "tailwindcss": "^3.4.14",
    "the-noun-project-v2": "^1.0.3",
    "typescript": "^5.9.2",
    "vite": "^5.4.10",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "@uswds/uswds": "^3.13.0",
    "chart.js": "^4.4.6",
    "framer-motion": "^11.12.0",
    "html5-qrcode": "^2.3.8",
    "phosphor-react": "^1.4.1",
    "qrcode.react": "^3.1.0",
    "react": "^18.3.1",
    "react-chartjs-2": "^5.2.0",
    "react-dom": "^18.3.1",
    "react-router-dom": "^6.28.0"
  },
  "type": "module",
  "lint-staged": {
    "*.{js,jsx,ts,tsx,css,scss,sass,json,md}": "prettier --write"
  }
}
